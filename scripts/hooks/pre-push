#!/usr/bin/env bash
# Pre-push hook: verify Go version and run smoke tests
set -euo pipefail

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

echo -e "${YELLOW}[pre-push hook]${NC} Checking Go version..."

# Verify exact Go version
gov="$(go env GOVERSION)"
if [[ "$gov" != "go1.25.5" ]]; then
  echo -e "${RED}❌ Go version mismatch!${NC}"
  echo "   Expected: go1.25.5"
  echo "   Got:      $gov"
  exit 1
fi
echo -e "${GREEN}✅ Go version verified: $gov${NC}"

echo -e "${YELLOW}[pre-push hook]${NC} Running tests..."

# Run go test with a timeout to avoid hanging
if ! go test ./... -timeout 5m; then
  echo -e "${RED}❌ Tests failed!${NC}"
  exit 1
fi

echo -e "${GREEN}✅ All pre-push checks passed!${NC}"
exit 0

